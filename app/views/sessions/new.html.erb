


<h1>Login</h1>

<%= form_for :session, url:'/login' do |f| %>

<div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :email, { class: "form-label"} %>
        <%= f.text_field :email, { class: "form-control", placeholder: "Email", type: "email" } %>
      </div>
      <div class="mb-3">
        <%= f.label :password, { class: "form-label"} %>
        <%= f.text_field :password, { class: "form-control", placeholder: "Enter you password", type: "password" } %>
      </div>

    </div>
  </div>
<%= f.submit "Submit" %>

<% end %>

<a href="/signup">Don't have an account yet? Sign up here!</a>
